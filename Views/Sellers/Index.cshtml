@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>


<hr />

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>


<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(x => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Email)
                </td>

                <td>
                    @Html.DisplayFor(x => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(x => item.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-rote-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-rote-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-rote-id="@item.Id">Delete</a>

                </td>


            </tr>
        }
    </tbody>
</table>

